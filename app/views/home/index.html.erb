<div class="date_time">
  <h2>Todays Date:</h2>
  <%= @time %>
</div><!-- date_time" -->

<div class="twitter_image">
  <h2>Twitter Feed</h2>
  <%= image_tag @handle_tweets.first.profile_image_url %>
</div><!-- twitter_image -->

<div class="twitter_text">
  <% @handle_tweets.each do |r| %>
    <div><%= r['text'] %></div>
  <% end %>
</div><!-- twitter_text -->

<div class="blog">
  <h2>Blog</h2>
  <% @post.each do |p| %>
    <div>Title: <%= p.title %></div>
    <div>Date: <%= p.date %></div>
    <div><%= p.content %></div>
    <br />
  <% end %>
</div><!-- blog -->

